<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/aToolbar"
        layout="@layout/toolbar" />
    <Button
        android:id="@+id/button_new_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New SMS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aToolbar"
        />
    <Button
        android:id="@+id/button_contact_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact SMS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_new_sms"
        app:layout_constraintTop_toBottomOf="@+id/button_new_sms"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_conversation_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_contact_sms" />

