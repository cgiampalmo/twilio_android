<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar android:id="@+id/toolbar_with_icon_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:elevation="@dimen/toolbar_elevation"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="?popupOverlayStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/contact_status_icon"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_gravity="left|center_vertical"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/input_label_vertical_spacing"
        app:srcCompat="@drawable/ic_green_small" />


    <ImageButton
        android:id="@+id/down_arrow"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        app:srcCompat="@drawable/ic_expand" />
    </android.support.v7.widget.Toolbar>