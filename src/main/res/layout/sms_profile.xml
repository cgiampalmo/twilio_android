<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="230dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/color_background_secondary"
    android:id="@+id/sms_profile_view"
    android:padding="2dp"
    >
    <LinearLayout
        android:id="@+id/txt_img_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sms_profile_location"
            android:minWidth="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Conversations.Body2"
            android:textColor="?attr/edit_text_color"
            android:textSize="23dp" />

        <com.glaciersecurity.glaciermessenger.ui.widget.UnreadCountCustomView
            android:id="@+id/sms_unread_count"
            android:layout_width="25dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:backgroundColor="?attr/colorAccent2" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.Conversations.Body2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:textColor="?attr/edit_text_color"
        android:id="@+id/sms_profile_number"
        />
</LinearLayout>