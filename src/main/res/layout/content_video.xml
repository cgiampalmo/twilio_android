<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:showIn="@layout/activity_video">

    <RelativeLayout
        android:id="@+id/call_action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <com.twilio.video.VideoView
            android:id="@+id/thumbnail_video_view"
            app:tviOverlaySurface="true"
            app:tviMirror="true"
            android:visibility="gone"
            android:layout_width="96dp"
            android:layout_height="170dp"
            android:layout_margin="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    <com.twilio.video.VideoView
        android:id="@+id/primary_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/no_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<!--    <com.makeramen.roundedimageview.RoundedImageView-->
<!--        android:id="@+id/no_video_view_avatar"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_centerVertical="true"-->
<!--        android:layout_width="@dimen/publish_avatar_size"-->
<!--        android:layout_height="@dimen/publish_avatar_size"-->
<!--        app:riv_corner_radius="100dip"/>-->
    </RelativeLayout>
    </LinearLayout>

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/reconnecting_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone" />
</merge>
